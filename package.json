{
  "name": "ponyracer",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "test:unit": "vitest",
    "test:unit:ci": "vitest run --coverage",
    "test:e2e": "start-server-and-test 'vite dev --port 4173' http://localhost:4173 'cypress open --e2e'",
    "test:e2e:ci": "vite build && start-server-and-test preview http://localhost:4173 'cypress run --e2e --browser chrome'",
    "build-only": "vite build",
    "type-check": "vue-tsc --build --force",
    "type-check:e2e": "tsc --noEmit -p cypress/e2e/tsconfig.json",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/",
    "vue-ninja": "vue-ninja"
  },
  "dependencies": {
    "vue": "3.4.0"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "1.6.1",
    "@tsconfig/node18": "18.2.2",
    "@types/jsdom": "21.1.6",
    "@types/node": "20.10.5",
    "@vitejs/plugin-vue": "5.0.0",
    "@vitest/coverage-istanbul": "1.1.0",
    "@vue/eslint-config-prettier": "9.0.0",
    "@vue/eslint-config-typescript": "12.0.0",
    "@vue/test-utils": "2.4.3",
    "@vue/tsconfig": "0.5.1",
    "cypress": "13.6.2",
    "eslint": "8.56.0",
    "eslint-plugin-cypress": "2.15.1",
    "eslint-plugin-vue": "9.19.2",
    "jsdom": "23.0.1",
    "npm-run-all2": "6.1.1",
    "mochawesome": "7.1.3",
    "mochawesome-merge": "4.3.0",
    "prettier": "3.1.1",
    "start-server-and-test": "2.0.3",
    "typescript": "5.3.3",
    "vite": "5.0.10",
    "vitest": "1.1.0",
    "vue-ninja": "0.6.0",
    "vue-tsc": "1.8.27"
  }
}
